<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appc="http://schemas.android.com/apk/res-auto"
    xmlns:android_custom="http://schemas.android.com/tools"
    android:id="@+id/bottom_music_rl"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#f6f7f6">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/title_bar_color">

    </View>
    <com.example.zts.appbase.view.CircleImageView
        android:id="@+id/bottom_music_cImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music_bg"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        />

    <com.example.zts.appbase.view.RoundProgressBar
        android:id="@+id/bottom_roundProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music_bg"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="@color/title_bar_color"
        android_custom:textColor="#ae4d2f"
        android_custom:textIsDisplayable="false"
        android_custom:roundWidth="4dip"
        android_custom:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/bottom_lin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="85dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bottom_music_tilteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模特"
            android:textSize="18sp"
            android:maxEms="5"
            android:singleLine="true"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/bottom_music_artistTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李荣浩"
            android:textSize="18sp"
            android:maxEms="5"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bottom_music_previous"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_media_previous"/>
        <ImageView
            android:id="@+id/bottom_music_pause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_media_pause"/>
        <ImageView
            android:id="@+id/bottom_music_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_media_next"/>
    </LinearLayout>
</RelativeLayout>
