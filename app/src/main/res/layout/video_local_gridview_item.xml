<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gridview_item_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="120dp"
            android:src="@drawable/icon"/>
        <TextView
            android:id="@+id/gridview_item_duration_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/gridview_item_image"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#7b7878"
            android:alpha="0.7"
            android:text="00:04:32"
            android:textSize="17sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/gridview_item_MvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:text=".......mv........"/>
</LinearLayout>
